vnoremap mz <Esc>/.class/b-2<CR>viw


" All - next | current curly

" ms is being used by something

nnoremap ma /{<CR>zovi}
vnoremap ma o<Esc>/{<CR>zovi}

nnoremap mA ?{<CR>vi}
vnoremap mA <Esc>?{<CR>nvi}

" All - next angle
nnoremap m> /><CR>vi>
vnoremap m> <Esc>/><CR>nvi>
nnoremap m< ?><CR>vi>
vnoremap m< <Esc>?><CR>vi>

" All - seek ahead camel case
nnoremap me ]w[bv]w
vnoremap me <Esc>]w[bv]w

nnoremap mE [b
nnoremap vie ]wv[b

" Java - next semicolon
nnoremap mç v/;<CR>
nnoremap mÇ v?;<CR>
vnoremap mç /;<CR>
vnoremap mÇ ?;<CR>

" All - next [list]
nnoremap ml /]<CR>vi[
nnoremap mL ?]<CR>vi[
vnoremap ml /]<CR><Esc>nvi[
vnoremap mL /[<CR><Esc>nvi[

